{
	"exclude": [
		"typings/main",
		"typings/main.d.ts",
		"typings/browser.d.ts",
		"typings/browser",
		"node_modules",
		"/node_modules",
		"../node_modules",
		"*node_modules*",
		"/node_modules*",
		"angular2",
		"rxjs",
		"typings",
		"src"
		
	],
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2016",
		"declaration": false,
		"module": "commonjs",
		"strictNullChecks": true,
		"sourceMap": true,
		"incremental": true,
		"skipLibCheck": true, 
		"forceConsistentCasingInFileNames": false,
		"allowJs": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"alwaysStrict": true,
		"noImplicitAny": false,
		//TODO return true
		"strictPropertyInitialization": false,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"noImplicitThis": true,
		"useUnknownInCatchVariables": true,
		// noPropertyAccessFromIndexSignature проверяет обращение к обьекту через точку, но не запрещает через object['method']
		"noUncheckedIndexedAccess": true,
		// как обеъекты так и массивы
		"noImplicitReturns": true,
		// обязательное возвращение чтобы всех веток функций результата
		"noFallthroughCasesInSwitch": true,
		// switch/case правильное оформление
		"noUnusedLocals": false,
		//TODO return true // наличие неиспользованных переменных переменных и аргументов функций соответственно
		"noUnusedParameters": false
		//TODO return true  наличие неиспользованных переменных переменных и аргументов функций соответственно
	}
} 
