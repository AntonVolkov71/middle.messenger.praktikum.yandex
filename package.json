{
	"name": "messanger",
	"version": "1.0.0",
	"description": "Chat Messages",
	"source": "src/index.html",
	"scripts": {
		"dev": "webpack-dev-server --hot --mode development  --port 3000",
		"prebuild": "rimraf dist",
		"build": "npm run prebuild && npm run build:webpack && npm run build:start:app",
		"build:start:app": "tsc ./src/app.ts",
		"build:webpack": "webpack --mode production",
		"build:docker": "docker build -t messanger .",
		"run:docker": "docker run -p 3000:3000 -d messanger",
		"start:docker": "npm run build:docker && npm run run:docker",
		"start": "nodemon src/app.ts",
		"eslint": "eslint src/**/**.ts",
		"fix": "eslint src/**/**.ts --fix",
		"test:watch": "mocha -r jsdom-global/register --require ignore-styles --watch",
		"test": "mocha -r jsdom-global/register --require ignore-styles"
	},
	"pre-commit": {
		"run": [
			"test",
			"eslint"
		],
		"silent": true
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "~7.19.0",
		"@babel/plugin-transform-block-scoping": "~7.18.9",
		"@babel/plugin-transform-classes": "~7.19.0",
		"@babel/plugin-transform-literals": "~7.18.9",
		"@babel/preset-env": "~7.19.0",
		"@babel/preset-typescript": "~7.18.6",
		"@types/chai": "~4.3.3",
		"@types/express": "~4.17.13",
		"@types/hbs": "~4.0.1",
		"@types/mocha": "~9.1.1",
		"@types/node": "~18.7.15",
		"@types/uuid": "~8.3.4",
		"@typescript-eslint/eslint-plugin": "~5.31.0",
		"@typescript-eslint/parser": "~5.31.0",
		"babel-loader": "~8.2.5",
		"babel-plugin-handlebars-inline-precompile": "~2.1.1",
		"buffer": "~6.0.3",
		"chai": "~4.3.6",
		"css-loader": "~6.7.1",
		"css-minimizer-webpack-plugin": "~4.0.0",
		"eslint": "~8.20.0",
		"eslint-config-airbnb": "~19.0.4",
		"eslint-config-airbnb-base": "~15.0.0",
		"eslint-plugin-import": "~2.26.0",
		"handlebars-webpack-plugin": "~2.2.1",
		"html-loader": "~4.1.0",
		"html-webpack-plugin": "~5.5.0",
		"ignore-styles": "~5.0.1",
		"jsdom": "20.0.0",
		"jsdom-global": "3.0.2",
		"lint-staged": "~13.0.3",
		"mini-css-extract-plugin": "~2.6.1",
		"mocha": "~10.0.0",
		"node-sass": "~7.0.1",
		"pre-commit": "<1.2.2",
		"process": "~0.11.10",
		"sass-loader": "~13.0.2",
		"stylelint": "~14.9.1",
		"ts-loader": "~9.3.1",
		"ts-node": "~10.9.1",
		"typescript": "~4.7.4",
		"typescript-hbs-plugin": "~0.1.1",
		"webpack": "~5.74.0",
		"webpack-cli": "~4.10.0",
		"webpack-dev-server": "~4.11.0"
	},
	"targets": {
		"web": {
			"context": "browser",
			"publicUrl": "./",
			"distDir": "dist"
		},
		"default": {
			"sourceMap": false
		}
	},
	"compilerOptions": {
		"outDir": "dist"
	},
	"dependencies": {
		"express": "~4.18.1",
		"handlebars": "~4.7.7",
		"nodemon": "~2.0.19",
		"uuid": "~8.3.2"
	}
}
